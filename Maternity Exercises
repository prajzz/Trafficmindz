import tkinter as tk
from PIL import ImageTk, Image

# Data structure to store exercises, details, and images based on pregnancy trimester
def get_exercise_data(weeks_pregnant):
    if 0 < weeks_pregnant <= 13:  # First trimester
        return {
            "Prenatal Yoga": {
                "description": "Focus on breathing exercises, gentle stretches, and relaxing poses. Avoid deep twists and lying on your back.",
                "image": "yoga_pose.jpg"  # Replace with actual image path
            },
            "Kegel Exercises": {
                "description": "Tighten the muscles you would use to stop urination, hold for 5 seconds, and then release. Repeat 10 times.",
                "image": "kegel_exercise.jpg"  # Replace with actual image path
            },
            "Walking": {
                "description": "Walk at a comfortable pace for 20–30 minutes a day. Keep it low-impact and relaxing.",
                "image": "walking.jpg"  # Replace with actual image path
            },
            "Swimming": {
                "description": "Swim or do gentle water aerobics for 30 minutes. Water supports your body and provides a full-body workout.",
                "image": "swimming.jpg"  # Replace with actual image path
            },
            "Pelvic Tilts": {
                "description": "Get on hands and knees, tighten your belly, tuck your pelvis, arch your back. Hold for a few seconds.",
                "image": "pelvic_tilts.jpg"  # Replace with actual image path
            }
        }
    elif 14 <= weeks_pregnant <= 27:  # Second trimester
        return {
            "Prenatal Yoga": {
                "description": "Continue gentle poses. Focus on poses like Cat-Cow, Warrior Pose, and Child's Pose. Avoid lying on your back.",
                "image": "yoga_pose.jpg"  # Replace with actual image path
            },
            "Light Strength Training": {
                "description": "Use light weights or resistance bands. Perform slow, controlled movements like bicep curls and squats.",
                "image": "strength_training.jpg"  # Replace with actual image path
            },
            "Walking": {
                "description": "Continue walking for 20–30 minutes. It's a safe and beneficial low-impact exercise.",
                "image": "walking.jpg"  # Replace with actual image path
            },
            "Swimming": {
                "description": "Water exercises relieve pressure on joints and provide full-body conditioning.",
                "image": "swimming.jpg"  # Replace with actual image path
            },
            "Stretching": {
                "description": "Stretch gently, focusing on areas like the shoulders, back, and hamstrings. Hold each stretch for 20–30 seconds.",
