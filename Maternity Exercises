                "description": "Focus on hip-openers and gentle stretches to improve flexibility. Avoid any intense poses.",
                "image": "yoga_pose.jpg"  # Replace with actual image path
            },
            "Squats": {
                "description": "Stand with feet shoulder-width apart, lower your body like sitting in a chair, hold for a few seconds, and stand back up.",
                "image": "squat.jpg"  # Replace with actual image path
            },
            "Breathing Exercises": {
                "description": "Inhale deeply through your nose, hold for a few seconds, and exhale through your mouth. Practice mindful breathing.",
                "image": "breathing.jpg"  # Replace with actual image path
            }
        }
    else:
        return {}

# Function to display exercise details and image
def display_exercise_details(exercise_name):
    exercise = exercise_data[exercise_name]
    description_label.config(text=exercise["description"])

    # Load and display the image
    img = Image.open(exercise["image"])
    img = img.resize((300, 300))
    img = ImageTk.PhotoImage(img)
    image_label.config(image=img)
    image_label.image = img  # To prevent garbage collection

def main():
    # Ask user for pregnancy weeks
    weeks_pregnant = int(input("How many weeks pregnant are you? "))

    # Get exercises based on weeks
    global exercise_data
    exercise_data = get_exercise_data(weeks_pregnant)

    if not exercise_data:
        print("Please consult your doctor for personalized exercise recommendations.")
        return

    # Create the main window
    root = tk.Tk()
    root.title("Pregnancy Exercise Recommendations")
    root.geometry("600x600")
    root.attributes("-topmost", True)

    # Title label
    title_label = tk.Label(root, text="Exercise Recommendations", font=("Arial", 20))
    title_label.pack(pady=10)

    # Dropdown menu for selecting exercises
    exercise_names = list(exercise_data.keys())
    selected_exercise = tk.StringVar(root)
    selected_exercise.set(exercise_names[0])  # Default value

    dropdown = tk.OptionMenu(root, selected_exercise, *exercise_names, command=display_exercise_details)
    dropdown.pack(pady=10)

    # Description label for exercise
    global description_label
    description_label = tk.Label(root, text="", wraplength=500, justify="left", font=("Arial", 14))
    description_label.pack(pady=10)

    # Image label to display the image
    global image_label
    image_label = tk.Label(root)
    image_label.pack(pady=10)


    # Show the details for the default selected exercise
    display_exercise_details(selected_exercise.get())

    root.mainloop()

if __name__ == "__main__":
    main()
